<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Existing TextView for serial number -->
    <TextView
        android:id="@+id/serialnumber2"
        android:layout_width="377dp"
        android:layout_height="67dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/neww"
        android:onClick="onSerialNumberClick"
        android:paddingStart="10dp"
        android:text="SerialNumber"
        android:textColor="#008FD9"
        android:textIsSelectable="true"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Button for exit -->

    <!-- Existing Toolbars and TextView -->


    <Button
        android:id="@+id/exitButton"
        android:layout_width="132dp"
        android:layout_height="51dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="475dp"
        android:layout_marginEnd="151dp"
        android:onClick="onExitButtonClick"
        android:text="Exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar6"
        android:layout_width="413dp"
        android:layout_height="100dp"
        android:background="@drawable/border"
        android:backgroundTint="#0090DA"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar7"
        android:layout_width="419dp"
        android:layout_height="54dp"
        android:background="#13ADF3"
        android:backgroundTint="#0090DA"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="353dp"
        android:layout_height="51dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="227dp"
        android:layout_marginEnd="29dp"
        android:text="Please register your device using the Serial number below "
        android:textColor="#090909"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>