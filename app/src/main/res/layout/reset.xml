<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/otp"
        android:layout_width="326dp"
        android:layout_height="54dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/nex"
        android:ems="10"
        android:hint="OTP Code"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColorHint="#03A9F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="413dp"
        android:layout_height="119dp"
        android:background="@drawable/border"
        android:backgroundTint="#1EB3F6"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar5"
        android:layout_width="419dp"
        android:layout_height="54dp"
        android:background="#13ADF3"
        android:backgroundTint="#1EB3F6"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="208dp"
        android:layout_height="152dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="101dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/brammmm" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="532dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/nex"
        android:ems="10"
        android:hint="Repeat New Password"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:textColor="#157EFA"
        android:textColorHint="#2B89F9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/eye100"
        android:layout_width="100dp"
        android:layout_height="51dp"
        android:layout_marginStart="283dp"
        android:layout_marginTop="536dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/eye_foreground" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="333dp"
        android:layout_height="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="357dp"
        android:layout_marginEnd="28dp"
        android:text="Enter the details below for Password Reset"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="468dp"
        android:layout_marginEnd="41dp"
        android:background="@drawable/nex"
        android:ems="10"
        android:hint="New Password"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:textColor="#157EFA"
        android:textColorHint="#0C8EF7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="172dp"
        android:layout_height="43dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="624dp"
        android:layout_marginEnd="119dp"
        android:backgroundTint="#1EB2F5"
        android:text="Reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="107dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="108dp"
        android:fontFamily="sans-serif-medium"
        android:text="Password Reset"
        android:textColor="#F6F7F8"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/eye10"
        android:layout_width="100dp"
        android:layout_height="51dp"
        android:layout_marginStart="283dp"
        android:layout_marginTop="471dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/eye_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>